<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="FR.ForgetPasswordPage"
  BackgroundColor="#ffffff"
  xmlns:i18n="clr-namespace:FR;assembly=FR">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <StackLayout Padding="20, 100, 20, 0" Grid.Row="0">
      <Label Text="{i18n:Translate GetBackPasswordInfo}"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        FontSize="20"/>
    </StackLayout>

    <Label Text="frsupport167@yahoo.com"
      VerticalOptions="Center"
      HorizontalOptions="Center"
      FontSize="20"
      Grid.Row="1"/>

    <StackLayout Padding="20, 10" Grid.Row="2">
      <Button x:Name="btnConfrim"
      TextColor="White"
      BackgroundColor="#376ea4"
      Text="{i18n:Translate Confirm}"
      FontSize="20"
      FontAttributes="Bold"
      BorderWidth="1"
      BorderColor="#376ea4"/>
    </StackLayout>
    
  </Grid>
</ContentPage>